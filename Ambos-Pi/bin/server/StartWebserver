#!/bin/bash
# /etc/init.d/StartWebserver

### BEGIN INIT INFO
# Provides:		StartWebserver
# Required-Start:	$remote_fs $syslog
# Required-Stop:	$remote_fs $syslog
# Default-Start:	2 3 4 5
# Default-Stop:		0 1 6
# Short-Description:	Starts the AMBOS webserver and recognition
# Description:		Starts the AMBOS webserver and recognition
### END INIT INFO
case "$1" in
	start)
		echo "Starting Server"
		python /home/ambos/AMBOS-PbL/bin/server/webserver.py &
		;;
	stop)
		echo "Stoping Server"
		killall AMBOS_PbL
		;;
	*)
		echo "Use start or stop"
		exit 1
		;;
esac

exit 0

